{
  "name": "orta-api",
  "version": "0.1.0",
  "description": "An API for Orta things.",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/server",
    "clean": "rm -rf ./node_modules && rm -rf ./dist",
    "dev:db:init": "docker-compose up -d && npm run orm migration:run",
    "dev:db:start": "docker-compose start",
    "dev:db:stop": "docker-compose stop",
    "dev:db:clean": "docker-compose down",
    "dev:init": "cp ./.env.example ./.env && mkdir -p dist && npm ci && npm run dev:db:init",
    "dev": "npm run dev:db:start && trap 'echo;echo; echo Shutting down' INT && tsc-watch --noClear --onSuccess \"node dist/server\"; npm run dev:db:stop",
    "lint": "eslint ./app/ --ext .ts",
    "orm": "tsc && typeorm",
    "orm:ts": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "postinstall": "link-module-alias"
  },
  "_moduleAliases": {
    "~": "dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orta-family/orta-api.git"
  },
  "keywords": [],
  "author": "Sophie Orta",
  "bugs": {
    "url": "https://github.com/orta-family/orta-api/issues"
  },
  "homepage": "https://github.com/orta-family/orta-api#readme",
  "dependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/express": "^4.17.2",
    "@types/node": "^13.5.3",
    "body-parser": "^1.19.0",
    "chalk": "^3.0.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "link-module-alias": "^1.2.0",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "slugify": "^1.3.6",
    "typeorm": "0.2.22",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/eslint-plugin-tslint": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "eslint": "^6.8.0",
    "ts-node": "3.3.0",
    "tsc-watch": "^4.1.0",
    "tsconfig-paths": "^3.9.0"
  }
}
